.main2
  .main2__show
    .main2__show__content
      .main2__show__content__top
        .itemsbox
          %h2.itemsbox__name
            = @item.name
          .itemsbox__body
            %ul.imagebox
              %li.images
                =image_tag @item.images[0].image.url, class:"big_image"
                %ul
                  - @images.each do |image|
                    %li
                      = image_tag image.image.url, class:"mini_image"
          .itemsbox__price
            %span.money ¥30000
            .itemsbox__price__data
              %span （税込み）
              %span 送料込み
          .itemsbox__explan
            %p 説明です説明です説明です説明です説明です説明です説明です説明です
          .itemsbox__table
            %table
              %tbody
                %tr
                  %th 出品者
                  %td hoge
                %tr
                  %th カテゴリー
                  %td
                    =link_to "登録してください","#"
                    %br
                    =link_to "登録してください","#"
                    %br
                    =link_to "登録してください","#"
                %tr
                  %th ブランド
                  %td
                %tr
                  %th 商品のサイズ
                  %td
                %tr
                  %th 商品の状態
                  %td 未使用なう
                %tr
                  %th 配送料の負担
                  %td 送料込み（出品者負担）
                %tr
                  %th 発送元の地域
                  %td
                %tr
                  %th 発送日の目安
                  %td 4-7日で発送

        .comments
          = form_with model: @comment do |f| 
            %textarea{name: "text"}
            %p.action
              相手のことを考えて丁寧にコメントしよう
              %br
              不快な言葉遣いはダメ絶対！
            %button.comebutton(type="submit")
              コメントする
        .main2__content__bottom
          =link_to "ベビー・キッズをもっと見る","#"
        - if user_signed_in? && current_user.id == @item.user_id 
          .edititem
            = link_to "商品の編集", "#"
        
          .destroyitem
            = link_to "この商品を削除する","#"